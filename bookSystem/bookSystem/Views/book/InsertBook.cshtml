<h2>新增書籍</h2>


<style>
    .demo {
        width: 500px;
        border-collapse: collapse;
        padding: 5px;
    }

        .demo th {
            padding: 5px;
            background: #F0F0F0;
        }

        .demo td {
            padding: 5px;
        }

    .textRight {
        text-align: right;
    }

</style>

<form action="/book/InsertBook" method="post" id="insertBookData">

    <div class="form-horizontal">
        <table class="demo">
            <tr>
                <td class="textRight"><label class="control-label " for="bookName">書名</label></td>
                <td>
                    <input class="form-control" id="bookName" name="bookName" required type="text" value="" />
                </td>
            </tr>
            <tr>
                <td class="textRight"><label class="control-label " for="bookAuthor">作者</label></td>
                <td>
                    <input class="form-control" id="bookAuthor" name="bookAuthor" required type="text" value="" />
                </td>
            </tr>
            <tr>
                <td class="textRight"><label class="control-label " for="bookPublisher">出版商</label></td>
                <td>
                    <input class="form-control" id="bookPublisher" name="bookPublisher" required type="text" value="" />
                </td>
            </tr>
            <tr>
                <td class="textRight"><label class="control-label " for="bookNote">內容簡介</label></td>
                <td>
                    <textarea class="form-control" cols="90" id="bookNote" required rows="5"></textarea>
                </td>
            </tr>
            <tr>
                <td class="textRight"><label class="control-label " for="bookBoughtDate">購書日期</label></td>
                <td>
                    <input id="bookBoughtDate" required/>
                </td>
            </tr>
            <tr>
                <td class="textRight"><label class="control-label " for="bookClassID">書籍類別</label></td>
                <td>
                    <select id="categoryDropDownList" required></select>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="存檔" />
                </td>
            </tr>
        </table>
    </div>
</form>

<div>
    <a href="/">回到上一頁</a>
</div>

<script src="~/Scripts/insertBook.js"></script>





